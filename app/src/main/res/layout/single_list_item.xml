<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:margin="12dp"
        android:id="@+id/image_icon"/>

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:layout_marginStart="12"
        android:layout_marginTop="12"
        android:layout_marginEnd="12"
        android:layout_marginBottom="12"
        android:layout_toEndOf="@id/image_icon"
        android:layout_toRightOf="@id/image_icon"
        android:maxLines="1"
        android:text="Android Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/price_txt"
        android:text="Android Version"
        android:textSize="14sp"
        android:maxLines="1"
        android:layout_width="120dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_txt"
        android:layout_alignLeft="@id/name_txt"
        android:layout_alignStart="@id/name_txt" />
    <TextView
        android:id="@+id/items_txt"
        android:text="Number of items"
        android:textSize="14sp"
        android:layout_margin="5dp"
        android:maxLines="1"
        android:layout_width="120dp"
        android:layout_below="@id/name_txt"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:layout_toRightOf="@id/price_txt" />

</RelativeLayout>